<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#00FF00"/> <!-- Green color for the on state -->
            <corners android:radius="15dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- White border -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000"/> <!-- Red color for the off state -->
            <corners android:radius="15dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- White border -->
        </shape>
    </item>
</selector>